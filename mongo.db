

1.##-------------Create Database------------##
use my_first_db

2.##-------------Create Collection------------##
db.createCollection("students")

3.4.##-------------Create all students------------##
db.students.insert({name: "Valeria", home_state:"Georgia", lucky_number:7, birthday: {month:8, day:16, year:1992}})
db.students.insert({name: "Johandro", home_state:"New York", lucky_number:4, birthday: {month:8, day:21, year:2000}})
db.students.insert({name: "Bryan", home_state:"Florida", lucky_number:10, birthday: {month:8, day:20, year:2000}})
db.students.insert({name: "Alfredo", home_state:"California", lucky_number:35, birthday: {month:5, day:26, year:1986}})
db.students.insert({name: "Marcelo", home_state:"Washington", lucky_number:5, birthday: {month:7, day:30, year:1990}})

5.##-------------Get all students------------##
db.students.find()

6.##-------------Find by state------------##
db.students.find({$or: [{home_state:"California"}, {home_state:"Washington"}]}).pretty()


7.##-------------Greater than 3------------##
db.students.find({lucky_number:{$gt:3}}).pretty()


7.##-------------Less or equal than 3------------##
db.students.find({lucky_number:{$lte:3}}).pretty()

7.##-------------Between 1 and 9------------##
db.students.find({$and:[{lucky_number:{$gte:1}}, {lucky_number:{$lte:9}}]}).pretty()

8.##-------------Add Interest------------##
db.students.update({},{$set: {"interests":['coding', 'brunch', 'MongoDB']}},{multi:true})

9.##-------------Add more interest------------##
db.students.update({name: "Valeria"},{$push: {interests:{$each:["snowboarding", "videogames"]}}})
db.students.update({name: "Johandro"},{$push: {interests:{$each:["basketball", "listenmusic"]}}})
db.students.update({name: "Bryan"},{$push: {interests:{$each:["playlol", "gooutside"]}}})
db.students.update({name: "Alfredo"},{$push: {interests:{$each:["coding", "traveling"]}}})
db.students.update({name: "Marcelo"},{$push: {interests:{$each:["sleeping", "eating"]}}})

10.##-------------Taxes------------##
db.students.update({name: "Valeria"}, {$push: {interests: 'taxes'}})

11.##-------------Remove taxes------------##
db.students.update({name: "Valeria"},{$pull: {interests: "taxes"}})

12.##-------------Remove California------------##
db.students.remove({home_state: "California"});

13.##-------------Remove by name------------##
db.students.remove({name: "Johandro"});


14.##-------------Remove just One------------##
db.students.remove({lucky_number: {$gt:5}}, {justOne:true})

15.##-------------Add belt------------##
db.students.update({},{$set: {"number_of_belts":0}},{multi:true})

16.##-------------increment in washington------------##
db.students.update({home_state: "Washington"},{$inc: {number_of_belts: 1}},{multi:true})

17.##-------------Rename num of belts------------##
db.students.update({}, {$rename: {"number_of_belts":"belts_earned"}}, {multi:true})


18.##-------------Remove lucky_number------------##
db.students.update({}, {$unset:{lucky_number:""}}, {multi:true})


19.##-------------add updated_on------------##
db.students.update({}, {$currentDate:{updated_on:true}},{multi:true})
